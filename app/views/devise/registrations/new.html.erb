<div class="row top-l bottom-l">
  <div class="col-md-4 offset-md-4">
    <div class="row">
      <div class="col-md-6 center">
       <small>Account Setup</small>
       <div style="width: 100%; height: 5px;margin-top: 5px; background-color: #03a9f4;">
       </div>
      </div>
      <div class="col-md-6 center">
        <small>Payment Details</small>
        <div style="width: 100%; height: 5px;margin-top: 5px; background-color: #eeeeee;">
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-4 offset-md-4 top-sm">
    <div class="card">
      <div class="card-block">
      <h4 class="card-title jumbo-header">SIGN UP</h4>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "row"}) do |f| %>
          <%= devise_error_messages! %>
            <div class="form-group col-xs-6">
              <%= f.text_field :first_name, class: 'form-control sign-up', placeholder: "First Name", required: true %>
            </div>
            <div class="form-group col-xs-6">
              <%= f.text_field :last_name, class: 'form-control sign-up', placeholder: "Last Name", required: true %>
            </div>
            <div class="form-group col-xs-12">
              <%= f.text_field :school, class: 'form-control sign-up', placeholder: "School", required: true %>
            </div>
            <div class="form-group col-xs-12">
              <%= f.text_field :email, class: 'form-control sign-up', placeholder: "Email", required: true %>
            </div>
            <div class="form-group col-xs-12">
              <%= f.password_field :password, class: 'form-control sign-up', placeholder: "Password", required: true %>
            </div>
            <div class="form-group col-xs-12">
              <%= f.password_field :password_confirmation, class: 'form-control sign-up', placeholder: "Password Confirmation", required: true %>
            </div>
          
            <div class="form-group col-xs-12">
              <div class="pull-xs-right">
                <%= f.submit "Get Started", class: "btn btn-primary" %>
              </div>
            </div><!-- submit btn -->
        <% end %>
      </div><!-- card block -->
    </div><!-- card -->
  </div><!-- offset -->
</div><!-- row -->
