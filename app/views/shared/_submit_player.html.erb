<div class="marginTop marginBottomS">
   <div class="row">
      <div class="col-md-8 offset-md-2">
      <h6 class="center marginBottom">Sorry, <%= params[:name] %> is not in our database. Do want to submit him?</h6>
  <div class="card">
    <div class="card-block">
			<h4 class="card-title">SUBMIT A PLAYER</h4>
			
			<%= form_for @lead, html: {class: 'row'} do |f| %>
			
				<div class="form-group col-xs-12">
					<%= f.text_field :player_name, class: 'form-control sign-up', placeholder: "Player Name", value: params[:name], required: true %>
					<%= f.label :player_name %>
				</div>

				<div class="form-group col-xs-6">
					<%= f.text_field :coach_name, class: 'form-control sign-up', placeholder: "Coach Name", required: true %>
					<%= f.label :coach_name %>
				</div>
				<div class="form-group col-xs-6">
					<%= f.text_field :coach_email, class: 'form-control sign-up', placeholder: "Coach Email", required: true %>
					<%= f.label :coach_email %>
				</div>
				<div class="form-group col-xs-6">
					<%= f.text_field :user_name, class: 'form-control sign-up', placeholder: "Your Name", required: true %>
					<%= f.label :user_name, "Your Name" %>
				</div>
				<div class="form-group col-xs-6">
					<%= f.text_field :user_email, class: 'form-control sign-up', placeholder: "Your Email", required: true %>
					<%= f.label :user_email, "Your Email" %>
				</div>
				
			<div class="col-md-12">
			  <%= f.submit "Submit Player", class: "btn btn-primary pull-xs-right" %>
			</div>

		<% end %>
		</div>
	</div>
	</div>
	</div>
</div>