<div class="container top-l">
	<div class="row">
		<div class="col-md-6 offset-md-3">
			<div class="card">
				<div class="card-block">
			 	<%= form_tag subscription_path, id: "payment-form" do %>
				  <h3 class="card-title"><span class="payment-errors label label-danger">$700/YEAR</span></h3>
				  <div class="row">
				    <div class="form-group col-sm-12">
				      <input type="text" data-stripe="number" class="form-control sign-up" placeholder="Card Number" required="true" />
				    </div>
					  <div class="form-group col-xs-12 col-md-5">
						  <input type="text" data-stripe="exp-month" class="form-control sign-up" placeholder="MM" required="true" />
				    </div>
				    <div class="form-group col-sm-5">
						  <input type="text" data-stripe="exp-year" class="form-control sign-up" placeholder="YYYY" required="true" />
						</div>
				    <div class="form-group col-sm-2">
				      <input  type="text" data-stripe="cvc" class="form-control sign-up" placeholder="CVC" required="true" />
				    </div>

					  <div class="form-group col-sm-12">
					  	<div class="float-xs-right">
					  		<button type="submit" class="btn btn-primary">Submit Payment</button>
					  	</div>
					  </div>
					</div>
				<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
